    },
    "files": [
      "**/*",
      "build.py",
      "templates/**/*",
      "static/**/*",
      "app_ui/**/*"
    ],
    "extraResources": [
      "build.py",
      "templates",
      "static"
    ]
  },
  "dependencies": {
    "serve-handler": "^6.1.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
