{
  "name": "poho",
  "productName": "PoHo",
  "version": "1.0.0",
  "author": "koaf",
  "description": "静的サイトジェネレータ―",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.koaf.poho",
    "icon": "icon.png",
    "win": {
      "target": "nsis",
